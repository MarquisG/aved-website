{% extends 'base.html.twig' %}

{% block body %}
    <section id="breadcrumbs" class="grey_section bg_image">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h1>{{ event.title }}
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path('aved_homepage') }}">Accueil</a>
                        </li>
                        <li>
                            <a href="{{ path('aved_event') }}">Evénements</a>
                        </li>
                        <li class="active">{{ event.title }}</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section id="content" class="light_section event-single left-sidebar">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-md-8 col-lg-9 col-sm-push-4 col-md-push-4 col-lg-push-3">
                    <article class="event">
                        <div class="entry-thumbnail">
                            <img alt="" src="{{ asset(''~event.banner) }}"></div>
                        <div class="post-content">
                            <header class="entry-header">
                                <h3 class="entry-title">
                                    <a href="blog-single-right.html" rel="bookmark">{{ event.title }}</a>
                                </h3>
                            </header>
                            <div class="entry-content">
                                <div class="entry-meta">
                                    <span class="date">
                                        <time datetime="2014-11-15T15:05:23+00:00" class="entry-date">Du {{ event.start|date("d/m/y") }} au {{ event.end|date("d/m/y") }}</time>
                                    </span>
                                    <span class="categories-links">
                                        Posté par <a rel="category" href="#">{{ event.user.school.name }}</a>
                                    </span>
                                </div>
                                <p>
                                    {{ event.description }}
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
                <aside class="col-sm-4 col-md-4 col-lg-3 col-sm-pull-8 col-md-pull-8 col-lg-pull-9">
                    <div class="widget widget_categories">
                        <h3 class="widget-title">News liées</h3>
                        <ul>
                            {% for article in articles %}
                                {% if article.user.id == event.user.id and article.id != event.id %}
                                    <li>
                                        <a href="{{ path('aved_event_detail', {id:article.id}) }}" title="">{{ article.title }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </section>
{% endblock %}