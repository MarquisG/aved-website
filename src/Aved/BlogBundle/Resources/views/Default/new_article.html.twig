{% extends '::base.html.twig' %}

{% block title %}- Nouvel article{% endblock %}

{% block body %}
    <section id="breadcrumbs" class="grey_section bg_image">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h1>
                        Ajouter un nouvel <strong>Article</strong>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path('aved_homepage') }}">Accueil</a>
                        </li>
                        <li class="active">Article</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="row">
        	<form method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-group"><br><br><br>
                    {{ form_label(form.title, label|default(null), {'label_attr': {'class':'col-md-3 control-label'}}) }}
                    <div class="col-md-7">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.description, label|default(null), {'label_attr': {'class':'col-md-3 control-label'}}) }}
                    <div class="col-md-7">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows':'5'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.thumbnail, label|default(null), {'label_attr': {'class':'col-md-3 control-label'}}) }}
                    <div class="col-md-7">
                        {{ form_widget(form.thumbnail, {'attr': {'class': ''}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.banner, label|default(null), {'label_attr': {'class':'col-md-3 control-label'}}) }}
                    <div class="col-md-7">
                        {{ form_widget(form.banner, {'attr': {'class': ''}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.event, label|default(null), {'label_attr': {'class':'col-md-3 control-label'}}) }}
                    <div class="col-md-7">
                        {{ form_widget(form.event, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3" style="padding-left:15px"><br>
                        <button type="submit" class="theme_button">Envoyer</button><br><br><br>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}