{% extends '::base.html.twig' %}

{% block title %}- Panel d'Administration{% endblock %}

{% block body %}
    <section id="breadcrumbs" class="grey_section bg_image">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h1>
                        Panel d'<strong>Administration</strong>
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="{{ path('aved_homepage') }}">Accueil</a>
                        </li>
                        <li class="active">Panel d'Administration</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="container-fluid text-center">
        <div class="row"><br>
            <div class="col-md-3">
                <h1>Bons Plans</h1><br>
                <button type="button" class="btn btn-success btn-lg btn-block"><a style="color:white" href="#">Ajouter un bon plan</a></button>
