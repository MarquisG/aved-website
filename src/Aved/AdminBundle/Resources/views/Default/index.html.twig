                <a style="color:white" href="#"><button type="button" class="btn btn-danger btn-lg btn-block">Supprimer un événement</button></a>
            </div>
            <div class="col-md-3">
                <h1>News</h1><br>
                <a style="color:white" href="{{ path('aved_admin_new_article') }}"><button type="button" class="btn btn-success btn-lg btn-block">Créer une news</button></a>
                <a style="color:white" href="#"><button type="button" class="btn btn-info btn-lg btn-block">Modifier une news</button></a>
                <a style="color:white" href="#"><button type="button" class="btn btn-danger btn-lg btn-block">Supprimer une news</button></a>
            </div>
            <div class="col-md-3">
                <h1>Utilisateur</h1><br>
                <a style="color:white" href="#"><button type="button" class="btn btn-info btn-lg btn-block"><a style="color:white" href="#">Modifier les droits utilisateur</button></a>
                <a style="color:white" href="#"><button type="button" class="btn btn-danger btn-lg btn-block">Supprimer un utilisateur</button></a>
            </div>
        </div><br>
    </div>
{% endblock %}